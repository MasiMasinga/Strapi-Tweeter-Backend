{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "Comment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "comment_text": {
      "type": "string"
    },
    "comment_url": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "likes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::like.like",
      "mappedBy": "comment"
    },
    "retweets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::retweet.retweet",
      "mappedBy": "comment"
    }
  }
}
